<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.hello" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>smoov</name>
    <description>
        An Apache Cordova wrapper around a Sencha Touch application.
    </description>
    <author email="lastminutemtp@gmail.com" href="http://github.com/LastMinuteMtp">
        Last Minute
    </author>
    <content src="index.html"/>
    <access origin="*" />
    <feature name="http://api.phonegap.com/1.0/device" />
    <preference name="permissions" value="none" />
    <preference name="orientation" value="default" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="7" />
    <preference name="android-installLocation" value="auto" />
    <icon src="icon.png" />
    <icon gap:density="ldpi" gap:platform="android" src="resources/icons/icon-36-ldpi.png" />
    <icon gap:density="mdpi" gap:platform="android" src="resources/icons/icon-48-mdpi.png" />
    <icon gap:density="hdpi" gap:platform="android" src="resources/icons/icon-72-hdpi.png" />
    <icon gap:density="xhdpi" gap:platform="android" src="resources/icons/icon-96-xhdpi.png" />

    <icon gap:platform="blackberry" src="resources/icons/icon-80.png" />
    <icon gap:platform="blackberry" gap:state="hover" src="resources/icons/icon-80.png" />

    <icon gap:platform="ios" height="57" src="resources/icons/Icon.png" width="57" />
    <icon gap:platform="ios" height="72" src="resources/icons/Icon-72.png" width="72" />
    <icon gap:platform="ios" height="114" src="resources/icons/Icon@2x.png" width="114" />
    <icon gap:platform="ios" height="144" src="resources/icons/Icon-72@2x.png" width="144" />

    <icon gap:platform="webos" src="resources/icons/icon-64.png" />

    <icon gap:platform="winphone" src="resources/icons/icon-48.png" />
    <icon gap:platform="winphone" gap:role="background" src="resources/icons/icon-173.png" />

    <gap:splash gap:density="ldpi" gap:platform="android" src="res/screen/screen-ldpi-portrait.png" />
    <gap:splash gap:density="mdpi" gap:platform="android" src="res/screen/screen-mdpi-portrait.png" />
    <gap:splash gap:density="hdpi" gap:platform="android" src="res/screen/screen-hdpi-portrait.png" />
    <gap:splash gap:density="xhdpi" gap:platform="android" src="res/screen/screen-xhdpi-portrait.png" />
    <gap:splash gap:platform="blackberry" src="res/screen/screen-225.png" />
    <gap:splash gap:platform="ios" height="480" src="res/screen/screen-iphone-portrait.png" width="320" />
    <gap:splash gap:platform="ios" height="960" src="res/screen/screen-iphone-portrait-2x.png" width="640" />
    <gap:splash gap:platform="ios" height="1024" src="res/screen/screen-ipad-portrait.png" width="768" />
    <gap:splash gap:platform="ios" height="768" src="res/screen/screen-ipad-landscape.png" width="1024" />
    <gap:splash gap:platform="winphone" src="res/screen/screen-portrait.jpg" />
</widget>
